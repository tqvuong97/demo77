<p id="notice"><%= notice %></p>

<h1>No publish</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Body</th>
      <th>Conclusion</th>
      <th>About Author</th>
      <th>Step</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <% if post.ispublish == nil && post.user_id == current_user.id && post.current_step != nil%>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.body %></td>
        <td><%= post.conclusion %></td>
        <td><%= post.aboutauthor %></td>
        <td><%= post.current_step %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit Post', edit_post_path(post)%></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>